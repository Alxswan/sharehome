<h2>Edit room</h2>

<%= form_for @room do |f| %>
<form>
  <div class="form-group">
    <%= f.label :occupant, "Occupant(s)" %>
    <%= f.text_field :occupant, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rent %>
    <%= f.number_field :rent, :class => "form-control" %>
  <div>

  <%=  f.submit :class =>"btn btn-default" %>
</form>
<% end %>
